    </div>
    <div class="row left">
        <h3>{{ 'title.how_do_your_beliefs_affect_your_life'|trans() }}</h3>
        {{ object.spiritualEffectsInLife|maybe_null()|markdown() }}
    </div>

    <div class="row left">
        <h2>{{ the_title('family_relationships')|raw() }}</h2>
    </div>
