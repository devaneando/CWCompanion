    </div>
    <div class="row left">
    <h3>{{ 'title.friends'|trans() }}</h3>
        {{ character.friends|maybeNull()|markdown() }}
        </div>
    <div class="row left">
        <h3>{{ 'title.enemies'|trans() }}</h3>
        {{ character.enemies|maybeNull()|markdown() }}
    </div>
    <div class="row left">
        <h3>{{ 'title.other_important_relationships'|trans() }}</h3>
        {{ character.significantOthers|maybeNull()|markdown() }}
    </div>
    <div class="row left">
        <h2>
            <i class="fas fa-user-secret"></i>
            {{ 'title.personal_history'|trans() }}
        </h2>
    </div>
    <div class="row left">
        {{ character.personalHistory|maybeNull()|markdown() }}
    </div>
</div>
{% endblock %}
