{% extends 'sonata_preview.html.twig' %}
{% trans_default_domain 'concept' %}

{% block title %}{{ concept.name }}{% endblock %}

{% block content %}
    <div id="concept">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 centered">
                    <img src="{{ concept.picture }}" alt="{{ concept.name }}">
                    <h1>{{ concept.name }}</h1>
                </div>
            </div>
            <div class="row left">
                <h2>
                    <i class="fas fa-file-signature"></i>
                    {{ 'title.content'|trans() }}
                </h2>
                {{ concept.content|maybeNull|markdown }}
            </div>
            <div class="row left">
                <h2>
                    <i class="fas fa-code-branch"></i>
                    {{ 'title.derivations'|trans() }}
                </h2>
            </div>
            <div class="row left">
                <h3>{{ 'title.parent'|trans() }}</h3>
                {{ the_parent(concept)|raw() }}
            </div>
            <div class="row left">
                <h3>{{ 'title.children'|trans() }}</h3>
                {{ the_children(concept)|raw() }}
            </div>
        </div>
    </div>
{% endblock %}
