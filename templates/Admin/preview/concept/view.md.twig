{% extends 'sonata_preview.html.twig' %}
{% trans_default_domain 'concept' %}

{% block title %}{{ object.name }}{% endblock %}

{% block content %}
<pre><code class="markdown">
# {{ object.name }}
&lt;img src=&quot;{{ object.picture }}&quot; style=&quot;float: right; height: 250px; margin: 10px;&quot;&gt;

## {{ 'title.content'|trans() }}

{{ object.content|maybe_null() }}

## {{ 'title.parent'|trans() }}

{{ the_parent(object, 'markdown') }}

## {{ 'title.children'|trans() }}

{{ the_children(object, 'markdown') }}
</code></pre>
{% endblock %}
