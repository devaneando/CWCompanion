{% extends 'base.html.twig' %}

{% block title %}{{ 'resetting.request.reset_password'|trans }}{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link rel = "stylesheet" type = "text/css" href = "/static/css/user.css" />
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-4">
            &nbsp;
        </div>
        <div class="col-md-4">
            &nbsp;
        </div>
        <div class="col-md-4">
            <form class="form-signin" action="{{ path('fos_user_resetting_send_email') }}" method="POST" >
                <h2 class="form-signin-heading h3 mb-3 font-weight-normal">{{ 'resetting.request.reset_password'|trans }}</h1>
                <label for="username">{{ 'resetting.request.username'|trans }}</label>
                <input  type="text"
                        value=""
                        name="username"
                        id="username"
                        class="form-control"
                        placeholder="{{ 'login.username'|trans }}"
                        required="required"
                        autofocus />
                <button class="btn btn-lg btn-primary" type="submit">
                    {{ 'resetting.request.submit'|trans }}
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock body %}
